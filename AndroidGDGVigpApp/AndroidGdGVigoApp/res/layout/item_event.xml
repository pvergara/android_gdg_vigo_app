<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
							xmlns:tools="http://schemas.android.com/tools"
							android:paddingTop="10dp"
							android:paddingRight="10dp"
							android:paddingLeft="10dp"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical">

	<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingBottom="@dimen/activity_vertical_margin"
					android:paddingRight="@dimen/activity_horizontal_margin"
					android:paddingLeft="@dimen/activity_horizontal_margin"
					android:paddingTop="@dimen/activity_vertical_margin"
					android:background="@drawable/card_bg2"
					android:orientation="vertical">

		<TextView
						android:id="@+id/ie_title"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/google_green"
						android:textColorLink="@color/google_grey"
						android:textSize="25sp"

						tools:text="Afterwork de Android, invitado: Jorge Galindo"/>

		<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:layout_gravity="center_vertical|left">

			<TextView
							android:id="@+id/ie_hours"
							android:layout_height="wrap_content"
							android:gravity="left"
							android:textColor="@color/custom_grey"
							android:fontFamily="sans-serif-light"
							android:layout_width="wrap_content"

							tools:text="18:00 - 21:00"/>

			<TextView
							android:id="@+id/ie_date"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="right"
							android:textColor="@color/custom_grey"
							android:fontFamily="sans-serif-light"

							tools:text="22/10/2013"/>
		</LinearLayout>

		<ameiga.saulmm.gdg.gui.views.LinkifiedTextView
						android:id="@+id/ie_content"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:ellipsize="end"
						android:textSize="15sp"
						android:lineSpacingMultiplier="1.25"
						android:layout_marginTop="10dp"
						android:fontFamily="sans-serif-light"
						android:textColorLink="@color/google_green"
						tools:text="Tenemos de visita a +Jorge Galindo Cruces en Vigo, Hemos quedado para HOY Sitio: Estrella de Galicia, Plaza de Compostela, 17, 36201 Vigo, Pontevedra, Pontevedra Hora: a partir de las 19:00 Charlas: Android, beers y temas de verano. Quien se apunta!"/>

		<FrameLayout
						android:layout_marginTop="20dp"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">


			<TextView
							android:id="@+id/ie_map_textview"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="right|center"
							android:layout_gravity="right"
							android:text="Map"
							android:fontFamily="sans-serif-light"
							android:textColor="#969696"
							android:drawableLeft="@drawable/location"/>
		</FrameLayout>
	</LinearLayout>

</LinearLayout>