<resources>

	<style name="AppBaseTheme" parent="android:Theme.Light"></style>

	<style name="AppTheme" parent="AppBaseTheme">
		<item name="android:windowBackground">@color/background_window</item>
		<item name="android:actionBarStyle">@style/ActionBarStyle</item>
	</style>

	<style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
		<item name="android:icon">@drawable/gdg_icon</item>
		<item name="android:background">@color/app_color</item>
		<item name="android:textSize">20sp</item>
	</style>

	<style name="nowCardStyle" parent="android:Widget.TextView">
		<item name="android:background">@drawable/search_bg_shadow</item>
		<item name="android:gravity">center</item>
		<item name="android:minHeight">100dp</item>
		<item name="android:minWidth">100dp</item>
		<item name="android:layout_margin">-10dp</item>
		<item name="android:textColor">#6E7271</item>
	</style>

</resources>
